<div class="container item-center ">
    <h1 class="text-center pt-4">Place Order</h1>
    <div class="row pt-2">
        <div class=" col-sm-6">
            <form action="" id="checkout-form" method="post">
                <div class="row">
                    <div class="col-6">
                        <label class="control-label">Name</label>

                    </div>
                    <div class="col-6">
                        <label class="control-label">Locality</label>

                    </div>
                </div>
                    <div class="row">
                        <div class="col-6">
                            <input type="text" class="form-control" name="name" value="{{user.name}}" required>

                        </div>
                        <div class="col-6">
                            <input type="text" class="form-control" name="locality" value="{{profile.locality}}" required>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <label class="control-label">Pincode</label>
                        </div>
                        <div class="col-6">
                            <label class="control-label">City/District/Town</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <input type="number" class="form-control" name="pincode" value="{{profile.pincode}}" required>
                        </div>
                        <div class="col-6">
                            <input type="text" class="form-control" name="city-district" value="{{profile.city_district}}" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <label class="col-md-6  col-sm-3 col-xs-12 mb-1 ">Address(Area and Street)</label>
                            <textarea type="text" class="form-control" name="area-street" required>{{profile.area_street}}</textarea>
                        </div>                        
                    </div>
                
                   <div class="row">
                        <div class="col-6">
                            <label class=" control-label">State</label>
                        </div>
                        <div class="col-6">
                            <label class=" control-label">Mobile Number</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <input type="text" class="form-control" name="state" value="{{profile.state}}" required>
                        </div>
                        <div class="col-6">
                            <input type="tel" class="form-control" name="number" value="{{profile.number}}" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <label class="col-md-2  col-sm-3 col-xs-12 control-label">Email</label>
                            <input type="email" class="form-control" name="email" value="{{profile.email}}">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <input type="text" name="user" id="userid" value="{{user._id}}" hidden>
                        </div>
                    </div>
        </div>
        <div class=" col-sm-6 mt-4 mb-3">
            <div class=" p-3 pmethod item-center">
                <h3>Total Amount:Rs.{{total}}</h3><br>
                <hr>
                <h5>Payement Method</h5>

                <input type="radio" name="payementMethod" id="radio1" value="COD" required>
                <label for="radio">COD</label><br>
                <input type="radio" name="payementMethod" id="radio2" value="online payement" required>
                <label for="radio">Online Payement</label><br><br>
                {{#if total}}

                <input type="submit" onclick="checkOnline()" class="btn btn-success" value="Checkout">
                {{/if}}
            </div>

        </div>
        </form>



    </div>
</div>
<script>
 function checkOnline(){
            if(!navigator.onLine){
                alert("check your internet connection")
                return false
            }           
         }
</script>