{
  "version": 2,
  "builds": [
    {
      "src": "app.js", 
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "app.js"  
    },
    {
      "src": "/public/(.*)",
      "dest": "/public/$1"  
    },
    {
      "src": "/(.*)",
      "dest": "app.js" 
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
